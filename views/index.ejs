<html lang="en">
	<%- include("./partials/head.ejs") %>

	<body>
		<%- include("./partials/nav.ejs") %>

		<main role="main" class="container">
			<div class="my-3 p-3 bg-white rounded shadow-sm">
				<h1 class="display-4">Contacts</h1>

				<% if (contacts.length > 0) { %> <% contacts.forEach(contact => { %>
					
				<!-- Creates div for every post -->
				<div class="media text-muted pt-3">
						<rect width="100%" height="100%" fill="#007bff"></rect>
					</svg>
					<p class="media-body pb-3 mb-0 lead lh-125 border-bottom border-gray">
						<% if(contact.contactGoogleId === googleId) {%>
							<a href="/<%=contact.userGoogleId%><%=contact.contactGoogleId%>" class="btn btn-primary"><%= contact.userDisplayName %></a>
						<% } else { %>
							<a href="/<%=contact.userGoogleId%><%=contact.contactGoogleId%>" class="btn btn-primary"><%= contact.contactDisplayName %></a>
						<% } %>
						<a href="/delete/<%=contact._id%>" class="delete_link">delete</a>		
						<!-- <strong class="d-block lead-gray-dark"></strong> -->

					</p>
				</div>
				<!-- Closing for each function and opening else statement -->
				<% }) %> <% } else { %>
				<!-- Displays when there are no logs -->
				<p>There are no contacts to display...</p>
				<% } %>
			</div>

		</main>

		<%- include("./partials/footer.ejs") %>
	</body>
</html>
