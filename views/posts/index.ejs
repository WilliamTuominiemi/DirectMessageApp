<html lang="en">
	<%- include("../partials/head.ejs") %>

	<body>
		<%- include("../partials/nav.ejs") %>

		<main role="main" class="container">
			<div class="my-3 p-3 bg-white rounded shadow-sm">
				<h1 class="display-4">All books</h1>

				<% if (posts.length > 0) { %> <% posts.forEach(post => { %>

				<!-- Creates div for every post -->
				<div class="media text-muted pt-3">
						<rect width="100%" height="100%" fill="#007bff"></rect>
					</svg>
					<p class="media-body pb-3 mb-0 lead lh-125 border-bottom border-gray">
						<% if(post.state === "read") { %>
							<a href="/profile/<%=post.posterId%>"><%= post.username %></a> has read:
						<% } else if(post.state === "reading") { %>
							<a href="/profile/<%=post.posterId%>"><%= post.username %></a> is reading:
						<% } else if(post.state === "toread") { %>
							<a href="/profile/<%=post.posterId%>"><%= post.username %></a> is planning on reading:
						<% } %>
						
						<!-- Log title -->
						<strong class="d-block lead-gray-dark"><%= post.title %> by <%= post.author %></strong>
						<!-- Log body -->
						<%= post.body %>

					</p>
				</div>
				<!-- Closing for each function and opening else statement -->
				<% }) %> <% } else { %>
				<!-- Displays when there are no logs -->
				<p>There are no books to display...</p>
				<% } %>
			</div>
		</main>

		<%- include("../partials/footer.ejs") %>
	</body>
</html>
