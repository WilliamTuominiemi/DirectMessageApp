<html lang="en">
	<%- include("../partials/head.ejs") %>

	<body>
		<%- include("../partials/nav.ejs") %>

		<main role="main" class="container">
			<%- include("../partials/addmessage.ejs") %>

			<div class="my-3 p-3 bg-white rounded shadow-sm">
				<% if (posts.length > 0) { %> <% posts.forEach(post => { %>

				<!-- Creates div for every post -->
				<div class="media text-muted pt-3">
						<rect width="100%" height="100%" fill="#007bff"></rect>
					</svg>
					<p class="media-body pb-3 mb-0 lead lh-125 border-bottom border-gray">
						<!--<>a href="/profile/<%=//post.posterId%>"><%= //post.username %></a>--><%= post.username %>:
						
						<strong class="d-block lead-gray-dark"><%= post.message %></strong>

					</p>
				</div>
				<!-- Closing for each function and opening else statement -->
				<% }) %> <% } else { %>
				<!-- Displays when there are no logs -->
				<p>Send a message to start the conversation...</p>
				<% } %>
			</div>

		</main>

		<%- include("../partials/footer.ejs") %>
	</body>
</html>
