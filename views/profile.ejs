		<!-- Main body -->
		<div class="col-lg" style="text-align: center">
			<br />

			<!-- Profile pic -->
			<svg
				class="bd-placeholder-img rounded-circle"
				width="140"
				height="140"
				xmlns="http://www.w3.org/2000/svg"
				preserveAspectRatio="xMidYMid slice"
				focusable="false"
				role="img"
				aria-label="Placeholder: 140x140"
