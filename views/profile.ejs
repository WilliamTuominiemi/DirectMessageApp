				<rect width="100%" height="100%" fill="#777"></rect>
				<text x="50%" y="50%" fill="#777" dy=".3em">140x140</text>
			</svg>

			<!-- Display name -->
			<h2><%= displayName %></h2>

			<br />

			<!-- Logout button -->
			<a class="btn btn-dark" href="/auth/logout" role="button">Logout</a>
		</div>

