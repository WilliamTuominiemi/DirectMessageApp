<html lang="en">
	<%- include("./partials/head.ejs") %>

	<body>
		<%- include("./partials/nav.ejs") %>

		<main role="main" class="container">
			<div class="my-3 p-3 bg-white rounded shadow-sm">
				<center>
				<!-- Display name -->
				<h2><%= displayName %></h2>

				<!-- Logout button -->
				<a class="btn btn-dark" href="/auth/logout" role="button">Logout</a>
				</center>
				<h1 class="display-4">Your posts</h1>

				<% if (posts.length > 0) { %> <% posts.forEach(post => { %>

				<!-- Creates div for every post -->
				<div class="media text-muted pt-3">
						<rect width="100%" height="100%" fill="#007bff"></rect>
					</svg>
					<p class="media-body pb-3 mb-0 lead lh-125 border-bottom border-gray">						
						<!-- Log title -->
						<strong class="d-block lead-gray-dark"><%= post.title %></strong>
						<!-- Log body -->
						<%= post.body %>
					</p>
					<p class="delete">
						<!--<a href="/edit/<%=post._id%>">Edit </a>		-->		
						 
						<a href="/delete/<%=post._id%>">Delete</a>		
					</p>
					
				</div>
				<!-- Closing for each function and opening else statement -->
				<% }) %> <% } else { %>
				<!-- Displays when there are no logs -->
				<p>There are no posts to display...</p>
				<% } %>
			</div>
		</main>

		<%- include("./partials/footer.ejs") %>
	</body>
</html>
